<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.EduForum" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryContainer">@color/mainTextboxBackgroundColor</item>
        <item name="colorOnPrimaryContainer">@color/loginTextboxBackgroundColor</item>
        <item name="fontFamily">@font/source_sans_pro_semibold</item>
        <item name="cardElevation">10dp</item>
        <item name="cardBackgroundColor">@color/cardViewBackgroundColor</item>
    </style>

    <style name="com.google.android.material.bottomnavigation.BottomNavigationView" parent="Widget.Material3.BottomNavigationView">

        <item name="selectableItemBackground">@color/primaryColor</item>

    </style>

    <style name="Widget.App.Button.OutlinedButton.IconOnly" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:padding">4dp</item>
        <item name="android:minWidth">22dp</item>
        <item name="android:minHeight">22dp</item>
        <item name="iconTint">@color/white</item>
        <item name="strokeWidth">2dp</item>
        <item name="cornerRadius">5dp</item>
    </style>

    <style name="Theme.EduForum" parent="Base.Theme.EduForum" />
</resources>